{
  "name": "next-graphql",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:debug": "node scripts/build-debug.cjs",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "prepare": "husky",
    "i18n-check": "i18n-check --locales messages --source en --format icu --only missingKeys invalidKeys unused undefined --unused src --reporter console",
    "lint-staged": "lint-staged",
    "graphql:codegen": "graphql-codegen --config codegen.ts"
  },
  "dependencies": {
    "@repo/typescript-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/ui": "workspace:*",
    "dotenv": "^16.5.0",
    "jotai": "^2.12.4",
    "next": "15.3.2",
    "next-intl": "^4.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "@apollo/client": "^3.13.8",
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@graphql-codegen/typescript-react-apollo": "^4.3.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@lingual/i18n-check": "^0.8.4",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "tailwindcss": "^4",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": ["npx eslint --fix", "npx prettier --write"],
    "*.json": ["npx prettier --write"]
  }
}
